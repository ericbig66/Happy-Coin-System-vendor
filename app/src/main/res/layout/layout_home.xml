<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Home"
    android:background="#CBE8CA">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:visibility="visible"
            app:civ_border_color="#2CBCA3"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#2CBCA3"
            app:civ_shadow_radius="0dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="請稍後...\n若經過一段時間仍未正常運作\n請聯絡客服人員"
                android:textSize="20sp" />

            <Button
                android:id="@+id/recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="50dp"
                android:onClick="execute"
                android:text="近期\n活動"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_pink"/>

            <Button
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:minWidth="50dp"
                android:onClick="execute"
                android:text="聯絡\n我們"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_pink"/>
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            app:rowCount="4">

            <Button
                android:id="@+id/AddProd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:background="#2CBCA3"
                android:onClick="execute"
                android:text="新品上架"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="0"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/addAct"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="新增活動"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="1"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/AlterProd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="商品異動"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="0"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/AlterEvent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"

                android:onClick="execute"
                android:text="活動異動"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="1"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/paycoin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"

                android:onClick="execute"
                android:text="發送紅包"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="2"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/getcoin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="商品兌換(結帳)"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="2"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/diary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="0.49"
                android:background="#2CBCA3"
                android:onClick="execute"
                android:text="日記簿\n&amp;簽到紀錄"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="3"
                app:layout_rowWeight="0.25" />

            <Button
                android:id="@+id/alter_vendor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="2.5dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="會員專區"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="3"
                app:layout_rowWeight="0.25"
                android:background="#2CBCA3"
                android:textColor="#FFFFFF"/>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</RelativeLayout>